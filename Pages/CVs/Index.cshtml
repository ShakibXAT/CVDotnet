@page
@model CV.Pages.CVs.IndexModel

@{
    ViewData["Title"] = "Index";
}




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CvModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CvModel[0].Profession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CvModel[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CvModel[0].SocialMedia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CvModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocialMedia)
            </td>
            <td>
                
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
               
            </td>
        </tr>
}
    </tbody>
</table>
